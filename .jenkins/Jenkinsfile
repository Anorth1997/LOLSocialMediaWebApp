pipeline {
    agent none
    stages {
        stage('git clone source code') {
            agent any
            steps {
                sh 'ls'
            }
        }

        stage('build') {
            agent { docker { image 'node:12.13.0-alpine' } }
            steps {
                sh 'npm --version'
                sh 'node --version'
                dir('LOLSocialMediaWebApp') {
                    sh '''
                        ls
                    '''
                }
            }
        }

        stage('Stagging approval') {
            steps {
                input "Push to stagging?"
            }
        }

        stage('Stagging') {
            steps {
                echo "stagging"
            }
        }
    }
}
