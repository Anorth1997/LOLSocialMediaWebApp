pipeline {
    agent none
    stages {
        stage('build') {
            agent { docker { image 'node:12.13.0-alpine' } }
            steps {
                sh 'npm --version'
                sh 'node --version'
                sh 'npm i'
                sh 'npm run lint'
            }
        }

        stage('Stagging approval') {
            steps {
                input "Push to stagging?"
            }
        }

        stage('Stagging') {
            steps {
                echo "stagging"
            }
        }
    }
}
