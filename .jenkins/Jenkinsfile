pipeline {
    agent none
    stages {
        stage('build') {
            agent { docker { image 'node:12.13.0-alpine' } }
            steps {
                sh 'npm --version'
                sh 'node --version'
                sh 'ls'
            }
        }

        stage('Stagging approval') {
            steps {
                input "Push to stagging?"
            }
        }

        stage('Stagging') {
            steps {
                echo "stagging"
            }
        }
    }
    post {
        agent any
        always {
            echo 'Finished Job, delete workspace directories'
            deleteDir()
        }
        success {
            echo 'Job Succeed'
        }
        failure {
            echo 'Job Failure'
        }
    }
}
