pipeline {
    agent none
    triggers {
        GenericTrigger(
             genericVariables: [
              [key: 'ref', value: '$.ref']
             ],

             causeString: 'Triggered on the branch $ref',

             token: 'abc123',

             printContributedVariables: true,
             printPostContent: true,

             silentResponse: false,

             regexpFilterText: '$ref',
        )
    }
    stages {
        stage('build') {
            agent { docker { image 'node:12.13.0-alpine' } }
            steps {
                sh 'npm --version'
                sh 'node --version'
                sh 'ls'
                sh "echo $ref"
                sh "echo $x_github_event"
            }
        }

        stage('Stagging approval') {
            steps {
                input "Push to stagging??"
            }
        }

        stage('Stagging') {
            steps {
                echo "stagging"
                echo "cool"
            }
        }
        
        stage('Production approval') {
            steps {
                input "Push to production?"
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Deploying"
            }
        }    
    }
    post {
        success {
            echo 'Job Succeed'
        }
        failure {
            echo 'Job Failure'
        }
    }
}
