pipeline {
    agent none
    stages {
        stage('build') {
            agent { docker { image 'node:12.13.0-alpine' } }
            steps {
                sh 'npm --version'
                sh 'node --version'
                sh 'ls'
            }
        }

        stage('Stagging approval') {
            steps {
                input "Push to stagging?"
            }
        }

        stage('Stagging') {
            steps {
                echo "stagging"
            }
        }
        
        stage('Production approval') {
            steps {
                input "Push to production?"
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Deploying"
            }
        }    
    }
    post {
        success {
            echo 'Job Succeed'
        }
        failure {
            echo 'Job Failure'
        }
    }
}
